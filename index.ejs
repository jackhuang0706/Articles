<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= i18n.heroTitle %></title>
  <link rel="icon" type="image/png" href="<%= assetBase %>assets/logo.png?v=<%= assetVersion %>" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="<%= assetBase %>assets/style.css?v=<%= assetVersion %>" />
  <script>
    window.__PAGE_BASE__ = "<%= pageBase.replace(/\/$/, '') %>";
  </script>
  <script src="<%= assetBase %>assets/theme-toggle.js?v=<%= assetVersion %>" defer></script>
  <script src="<%= assetBase %>assets/lang-toggle.js?v=<%= assetVersion %>" defer></script>
</head>
<body>
  <% const list = Array.isArray(articles) ? articles : []; %>
  <div class="page">
    <%- await include('partials/hero-index', { i18n, locale }) %>
    <%- await include('partials/index-content', { list, pageBase, pageExt }) %>
    <%- await include('partials/footer') %>
  </div>
</body>
</html>
