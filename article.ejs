<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= article.title %> | <%= i18n.heroTitle %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
  <link rel="stylesheet" href="<%= assetBase %>assets/highlight-github.min.css?v=<%= assetVersion %>" />
  <link rel="stylesheet" href="<%= assetBase %>assets/style.css?v=<%= assetVersion %>" />
  <script>
    window.__PAGE_BASE__ = "<%= pageBase.replace(/\/$/, '') %>";
  </script>
  <script src="<%= assetBase %>assets/code-tabs.js?v=<%= assetVersion %>" defer></script>
  <script src="<%= assetBase %>assets/theme-toggle.js?v=<%= assetVersion %>" defer></script>
  <script src="<%= assetBase %>assets/lang-toggle.js?v=<%= assetVersion %>" defer></script>
  <script src="<%= assetBase %>assets/toc.js?v=<%= assetVersion %>" defer></script>
</head>
<body>
  <div class="page">
    <%- await include('partials/hero-article', { i18n, locale, homeHref }) %>

    <%- await include('partials/article-content', { article, articleHtml, toc, i18n, homeHref }) %>

    <%- await include('partials/footer') %>
  </div>
  <script>
    // Remove stray "\n" text nodes between block elements inside article-body
    (function() {
      var body = document.querySelector('.article-body');
      if (!body) return;
      var walker = document.createTreeWalker(body, NodeFilter.SHOW_TEXT, null);
      var nodes = [];
      while (walker.nextNode()) {
        var t = walker.currentNode;
        if (t && typeof t.nodeValue === 'string' && t.nodeValue.trim() === '\\n') {
          nodes.push(t);
        }
      }
      nodes.forEach(function(n) {
        if (n.parentNode) n.parentNode.removeChild(n);
      });
    })();
  </script>
  <script>
    (() => {
      const el = document.querySelector(".hero__text--clickable");
      if (!el) return;
      const go = () => {
        const target = el.getAttribute("data-home") || "/";
        window.location.href = target;
      };
      el.addEventListener("click", go);
      el.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " ") {
          e.preventDefault();
          go();
        }
      });
    })();
  </script>
</body>
</html>
