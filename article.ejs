<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= article.title %> | <%= i18n.heroTitle %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
  <link rel="stylesheet" href="<%= assetBase %>assets/highlight-github.min.css" />
  <link rel="stylesheet" href="<%= assetBase %>assets/style.css" />
  <script src="<%= assetBase %>assets/code-tabs.js" defer></script>
  <script src="<%= assetBase %>assets/theme-toggle.js" defer></script>
  <script src="<%= assetBase %>assets/lang-toggle.js" defer></script>
  <script src="<%= assetBase %>assets/toc.js" defer></script>
</head>
<body>
  <div class="page">
    <header class="hero">
      <div class="hero__controls">
        <div class="theme-toggle">
          <button type="button" id="theme-toggle" aria-label="切換主題">
            <span class="theme-toggle__track">
              <svg class="theme-toggle__icon theme-toggle__icon--sun" viewBox="0 0 24 24" aria-hidden="false">
                <circle cx="12" cy="12" r="5" stroke="currentColor" stroke-width="2" fill="none" />
                <path d="M12 2v2m0 16v2M4.93 4.93l1.41 1.41m11.32 11.32l1.41 1.41M2 12h2m16 0h2M4.93 19.07l1.41-1.41m11.32-11.32l1.41-1.41" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" />
              </svg>
              <svg class="theme-toggle__icon theme-toggle__icon--moon" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M21 12.79A9 9 0 0 1 11.21 3 7 7 0 1 0 21 12.79Z" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <span class="theme-toggle__thumb"></span>
            </span>
          </button>
        </div>
        <div class="lang-switch">
          <select id="lang-select" aria-label="Language">
            <option value="zh" <%= (locale === 'zh') ? 'selected' : '' %>>中文</option>
            <option value="en" <%= (locale === 'en') ? 'selected' : '' %>>English</option>
          </select>
        </div>
      </div>
      <div class="hero__text hero__text--clickable" data-home="<%= homeHref %>" role="button" tabindex="0" aria-label="<%= i18n.back %>">
        <h1><%= i18n.heroTitle %></h1>
      </div>
    </header>

    <main class="layout layout--with-toc">
      <article class="reader">
        <a class="back-link" href="<%= homeHref %>"><%= i18n.back %></a>
        <h1><%= article.title %></h1>
        <p class="date">
          <%= article.date %>
          <% if ((article.tags || []).length) { %>
            ·
            <% (article.tags || []).forEach(function(tag, i) { %>
              <span class="tag"><%= tag %></span><% if (i < article.tags.length - 1) { %> <% } %>
            <% }) %>
          <% } %>
        </p>
        <div class="article-body"><%- articleHtml %></div>
      </article>
      <% if (typeof toc !== 'undefined' && toc.length > 0) { %>
      <aside class="toc">
        <div class="toc__inner">
          <h3 class="toc__title"><%= i18n.toc %></h3>
          <nav class="toc__nav">
            <% toc.forEach(function(item) { %>
              <a href="#<%= item.id %>" class="toc__link toc__link--level-<%= item.level %>"><%= item.text %></a>
            <% }) %>
          </nav>
        </div>
      </aside>
      <% } %>
    </main>

    <footer class="footer">
      <p>&copy; 2025. All rights reserved.</p>
    </footer>
  </div>
  <script>
    (() => {
      const el = document.querySelector(".hero__text--clickable");
      if (!el) return;
      const go = () => {
        const target = el.getAttribute("data-home") || "/";
        window.location.href = target;
      };
      el.addEventListener("click", go);
      el.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " ") {
          e.preventDefault();
          go();
        }
      });
    })();
  </script>
</body>
</html>
